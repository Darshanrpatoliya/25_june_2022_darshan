<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#40EC9B">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Circle Area"

        android:textColor="@color/black"
        android:background="#92EA17"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Radius  (r) in (cm)"
            android:textColorHint="@color/black"
            android:background="#F5F8F7"
            android:layout_margin="15dp"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:id="@+id/edinput_radius"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ans_area"
                android:textSize="30sp"
                android:layout_margin="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_weight="1"
                android:hint="Area Of Circle = "/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Find Circle Area"
                android:id="@+id/btn_find"
                android:layout_weight="3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="reset"
                android:id="@+id/btn_reset"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>